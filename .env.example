# Credenciais da Aplicação registrada no Azure AD
TENANT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
CLIENT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Detalhes do Site SharePoint
# O domínio é a parte principal da URL do seu SharePoint (ex: suaempresa.sharepoint.com)
DOMAIN="suaempresa.sharepoint.com"
# O nome do site como aparece na URL (ex: /sites/NomeDoSeuSite)
SITE_NAME="NomeDoSeuSite"
# O nome da biblioteca de documentos. "Documentos" é o padrão em sites de equipe.
DRIVE_NAME="Documents"

# Caminho da pasta local de onde os arquivos serão lidos
# Use barras duplas no Windows (ex: "C:\\Users\\SeuUsuario\\Desktop\\Relatorios")
SOURCE_FOLDER="C:\\Caminho\\Para\\Sua\\Pasta\\De_Arquivos"

# Configurações de E-mail para relatórios
